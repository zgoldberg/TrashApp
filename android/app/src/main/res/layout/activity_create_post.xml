<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp">

    <TextView
        android:id="@+id/create_account_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginBottom="50dp"
        android:text="@string/LOGIN_login_header" />

    <EditText
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/post_text_field"
        android:hint = "@string/CREATEPOST_txt"
        android:focusable = "true"
        android:textColorHighlight = "#ffff"
        android:textColorHint = "#494747"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/create_account_header"
        android:textSize="20sp"
        android:maxLines="1"/>

        <Button
            android:id="@+id/post_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="300dp"
            android:text="@string/CREATEPOST_txt"
            android:textSize="20sp" />

        <Button
            android:id="@+id/get_image"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="370dp"
            android:text="Get Image"
            android:textSize="20sp" />

    </RelativeLayout>


</LinearLayout>